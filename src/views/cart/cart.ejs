<% layout('layouts/boilerplate') -%>

    <section class="container">
        <h4 class="display-4 bg-light p-3 rounded" style="text-align: center;">My Cart</h4>
        <div class="row">
            <div class="col-lg-8">

                <% for(let item of cart){%>
                    <div class="card mx-auto mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-4">
                                <img src="<%=item.imgUrl%>" class="img-fluid rounded-start" style="height: 100%;"
                                    alt="...">
                            </div>
                            <div class="col-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%=item.name%>
                                    </h5>
                                    <p class="card-text">Price : &#8377 <%=item.price%>
                                    </p>
                                    <p class="card-text">Quantity : <%=item.qty%>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%} %>
            </div>
            <div class="col-lg-4">
                <ul class="list-group">
                    <h5 class="display-6 p-1 rounded" style="font-size: 25px">Price Summary</h5>
                    <%for(const item of cart){%>
                        <li class="list-group-item"><span class="fw-bold">
                                <%=item.name%> -
                            </span>&#8377; <%=item.price%> x <span>
                                    <%=item.qty%>
                                </span></li>
                        <%}%>
                            <li class="list-group-item fw-bold">Total Amount : &#8377; <%=totalCartAmount%>
                            </li>
                </ul>
                <form action="/payment_gateway/payumoney" method="POST">

                    <input class="amount" type="hidden" name="amount" value="<%=totalCartAmount%>" />

                    <input class="con" type="hidden" name="phone" value="9999999999" />

                    <input type="hidden" name="service_provider" value="payu_paisa" />

                    <input type="hidden" class="product" name="productinfo" value="<%=productInfo%>" />

                    <button type="submit" class="btn btn-sm btn-success mt-2">Checkout</button>

                </form>

            </div>
        </div>

    </section>