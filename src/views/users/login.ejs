<% layout('/layouts/boilerplate') -%>

    <section>
        <%- include('../partials/flash') %>
            <h1>Login</h1>
            <form action="/login" method="post" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username" id="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" id="username"
                        placeholder="Enter your username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid password.
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password" id="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" id="password"
                        placeholder="Enter your password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid password.
                    </div>
                </div>
                <button type="submit" class="btn btn-sm btn-outline-dark mb-3">Login</button>

                <div class="mb-3">
                    <p>Don't have an account? <a href="/register" style="text-decoration: none;">Sign Up</a></p>
                </div>
            </form>
    </section>