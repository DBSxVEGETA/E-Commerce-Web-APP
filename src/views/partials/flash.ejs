<div style="width: 400px;">
    <% if(success && success.length){ %>
        <div class="alert alert-success alert-dismissible fade show" style="width: 90%; padding: 5px;" role="alert">
            <p>
                <%=success%>
            </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
</div>
<div style="width: 400px;">
    <% if(error && error.length){ %>
        <div class="alert alert-danger alert-dismissible fade show" style="width: 90%; padding: 5px;" role="alert">
            <p>
                <%=error%>
            </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
</div>