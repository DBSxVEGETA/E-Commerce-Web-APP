<% layout('layouts/boilerplate') -%>

    <section class="container">
        <%- include("../partials/flash")%>
            <h4 class="display-4 bg-light p-3 rounded" style="text-align: center;">My Orders</h4>

            <%if(currentUser.orders.length===0){%>
                <h2 style="text-align: center;">No Orders
                    Yet</h2>
                <%}else{%>
                    <div class="row">
                        <% for(let order of orders){ %>
                            <div class="col-lg-8">
                                <div class="card" style="width: 80%;margin: 10px auto;">
                                    <h5 class="card-header">
                                        <p>Total : &#8377 <%=order.amount%>
                                        </p>
                                        <p class="fw-light fs-6">Transaction Id : <%=order.txnid%>
                                        </p>
                                        <p class="fw-light fs-6">Order Date : <%=order.createdAt.toDateString()%>
                                        </p>
                                    </h5>
                                    <div class="card-body">
                                        <% for(let item of order.orderedProducts){%>
                                            <div class="card mx-auto mb-3" style="max-width: 540px;">
                                                <div class="row g-0">
                                                    <div class="col-4">
                                                        <img src="<%=item.imgUrl%>" class="img-fluid rounded-start"
                                                            style="height: 100%;" alt="...">
                                                    </div>
                                                    <div class="col-8">
                                                        <div class="card-body">
                                                            <h5 class="card-title">
                                                                <%=item.name%>
                                                            </h5>
                                                            <a href="/products/<%=item._id%>"
                                                                class="btn btn-info btn-sm">Buy it
                                                                again</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <%} %>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                    <%}%>
    </section>